<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/home_title_4" />

    <ImageView
            android:id="@+id/Hachitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="@+id/home"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.222"
            app:srcCompat="@drawable/hachitime_" />

    <ImageView
            android:id="@+id/White"
            android:layout_width="0dp"
            android:layout_height="157dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintVertical_bias="0.57"
            app:srcCompat="@drawable/whitebox" />

    <ImageButton
            android:id="@+id/sisetsuButton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/White"
            app:layout_constraintEnd_toEndOf="@+id/White"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="@+id/White"
            app:layout_constraintTop_toTopOf="@+id/White"
            app:srcCompat="@drawable/greenbotton_" />

    <ImageButton
            android:id="@+id/mapbutton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/White"
            app:layout_constraintEnd_toEndOf="@+id/White"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/sisetsuButton"
            app:layout_constraintTop_toTopOf="@+id/White"
            app:srcCompat="@drawable/greenbotton_" />

    <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/White"
            app:layout_constraintEnd_toEndOf="@+id/White"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="@+id/White"
            app:layout_constraintTop_toTopOf="@+id/White"
            app:layout_constraintVertical_bias="0.49"
            app:srcCompat="@drawable/greenbotton_" />

</android.support.constraint.ConstraintLayout>